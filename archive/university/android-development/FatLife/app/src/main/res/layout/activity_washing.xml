<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <TextView
      android:id="@+id/tv_back"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:layout_above="@id/ll_washing_machine"
      android:background="@mipmap/ic_arrow_left_72" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_above="@id/ll_washing_machine"
      android:layout_toRightOf="@id/tv_back"
      android:text="洗烘"
      android:textColor="?colorOnBackground"
      android:textSize="18sp" />
    <LinearLayout
      android:id="@+id/ll_washing_machine"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_alignParentBottom="true"
      android:gravity="center_vertical">
      <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_home_wash_2" />
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:id="@+id/tv_washing_machine"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="1号洗衣机"
          android:textColor="?colorOnBackground"
          android:textSize="18sp" />
        <TextView
          android:id="@+id/tv_washing_machine_location"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="理工两江3栋" />
      </LinearLayout>
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <TextView
        android:id="@+id/tv_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@mipmap/ic_edit"
        android:backgroundTint="?colorOnBackground" />
      <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_call"
        app:tint="?colorOnBackground" />
    </LinearLayout>
  </RelativeLayout>

  <LinearLayout
    android:id="@+id/ll_self_cleaning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/bg_card_view_selectable"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="桶自洁"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="￥0.00"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_vertical">
      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_wash_time" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="5分钟"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="设备桶自洁" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_dehydration_only"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/bg_card_view_selectable"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单脱"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="￥0.09"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_vertical">
      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_wash_time" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="5分钟"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="适用衣物脱水" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_standard_washing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/bg_card_view_selectable"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标准洗"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="￥2.85"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_vertical">
      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_wash_time" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="40分钟"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="适合常规衣物" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/ll_extend_washing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="15dp"
    android:background="@drawable/bg_card_view_selectable"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical">
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大物洗"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="￥3.85"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_vertical">
      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_wash_time" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="50分钟"
        android:textColor="?colorOnBackground"
        android:textSize="18sp" />
    </LinearLayout>
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="适用大件衣物，如：被子，被单等" />
  </LinearLayout>

  <Space
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@color/white"
    android:gravity="center_vertical">
    <TextView
      android:id="@+id/tv_amount"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="10dp"
      android:text="￥0.00"
      android:textColor="?colorOnBackground"
      android:textSize="18sp" />
    <TextView
      android:id="@+id/tv_type"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="桶自洁"
      android:textColor="?colorOnBackground"
      android:textSize="18sp" />
    <Space
      android:layout_width="1dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />
    <TextView
      android:id="@+id/tv_done"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:background="@drawable/bg_bottom_view"
      android:text="选好了"
      android:textColor="@color/white" />
  </LinearLayout>

</LinearLayout>
